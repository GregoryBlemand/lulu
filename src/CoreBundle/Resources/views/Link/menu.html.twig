        <li><a href="{{ path('fos_user_security_logout') }}">déconnecter</a></li>
        <li>-----------------------</li>
    {% endif %}

    <li><a href="{{ path('core_homepage') }}">Accueil</a></li>


    {% for lien in liens %}
        <li>
            {% if lien.type == 'EXTERNE' %}
                <a href="{{ lien.url }}" target="_blank">{{ lien.title }}</a>
            {% else %}
                <a href="{{ path('show_page', {'slug': lien.slug}) }}">{{ lien.title }}</a>
            {% endif %}
        </li>
    {% endfor %}

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

    {% else %}
        <li>-----------------------</li>
        <li><a href="{{ path('fos_user_security_login') }}">Vos galeries</a></li>
    {% endif %}

